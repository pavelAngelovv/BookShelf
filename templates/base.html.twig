<!DOCTYPE html>
<html lang="en" class="h-auto">
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>ðŸ“š</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% block stylesheets %}{% endblock %}
  </head>
  <body id="body-pd"> 
    <header class="header" id="header">
      <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
      <div>
        {% if app.user %}
          <p class="text-white">Welcome {{ app.user.username }}</p>
        {% else %}
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle mt-3" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Options
            </button>
            <div class="dropdown-menu p-1" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="{{ path('app_login') }}">Log in</a>
              <a class="dropdown-item" href="{{ path('app_register') }}">Register</a>
            </div>
          </div>
        {% endif %}
      </div>
    </header>
    <div class="l-navbar" id="nav-bar">
      <nav class="nav">
        <div>
          <div class="nav_list">
            <a href="{{ path('app_book_index') }}" class="nav_link" id="book">
              <img class="bx nav_image" src="{{ asset('/images/4ae8169f-74ff-4257-9eba-6b5a8ab3a4b5.png') }}"/><span class="nav_name">Books</span>
            </a>
            <a href="{{ path('app_author_index') }}" class="nav_link" id="author">
              <img class="bx nav_image" src="{{ asset('/images/f42f6dcf-25be-4633-b8fc-c736ef5e0d66.png') }}"/><span class="nav_name">Authors</span>
            </a>
            <a href="{{ path('app_publisher_index') }}" class="nav_link" id="publisher">
              <img class="bx nav_image" src="{{ asset('/images/62acdad8-a231-4e86-9558-5b1b819f12cc.png') }}"/><span class="nav_name">Publishers</span>
            </a>
            {% if is_granted('ROLE_ADMIN') %}
              <a href="{{ path('app_user_index') }}" class="nav_link" id="user">
                <img class="bx nav_image" src="{{ asset('/images/d2b1fd21-6d82-4b7e-ad53-01d259a393a7.png') }}"/><span class="nav_name">Users</span>
              </a>
            {% endif %}
            {% if app.user %}
              <a href="{{ path('app_book_new') }}" class="nav_link" id="new">
                <img class="bx nav_image" src="{{ asset('/images/655024a6-f7ba-4a8e-abb0-257b6c4db479.png') }}"/><span class="nav_name">Add a book</span>
              </a>
            {% endif %}
          </div>
        </div>
        <a href="/logout" class="nav_link">
          <i class='bx bx-log-out nav_icon'></i><span class="nav_name">Sign Out</span>
        </a>
      </nav>
    </div>
    {% block body %}{% endblock %}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="{{ asset('js/sidebar-menu.js') }}"></script>
    {% block javascripts %}{% endblock %}
  </body>
</html>
