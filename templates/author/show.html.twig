{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
<section>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 mb-5 w-75">
        <div class="table-responsive">
          <h1 class="mb-5">Author</h1>
          <table class="table table-dark table-bordered mb-0">
            <tbody>
              <tr>
                <th scope="row">Id</th>
                <td>{{ author.id }}</td>
              </tr>
              <tr>
                <th scope="row">FirstName</th>
                <td>{{ author.firstName }}</td>
              </tr>
              <tr>
                <th scope="row">LastName</th>
                <td>{{ author.lastName }}</td>
              </tr>
              <tr>
                <th scope="row">Books</th>
                <td>
                  {% for book in author.books %}
                    {{ book.title }}
                    {% if not loop.last %}, {% endif %}
                  {% endfor %}
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="d-flex justify-content-between">
          <a href="{{ path('app_author_index') }}" class="btn btn-secondary mt-3">‚Üê Back to List</a>
          <div class="d-flex">
            <a href="{{ path('app_author_edit', {'id': author.id}) }}" class="btn btn-warning mt-3 mx-2">Edit</a>
            <a href="{{ path('app_author_index') }}" class="btn btn-danger mt-3 p-0">{{ include('author/_delete_form.html.twig') }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
