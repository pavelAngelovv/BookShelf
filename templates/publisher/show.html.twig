{% extends 'base.html.twig' %}

{% block title %}Publisher{% endblock %}

{% block body %}
<section>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 mb-5 w-75">
        <div class="table-responsive">
          <h1 class="table-title">Publisher</h1>
          <table class="table table-dark table-bordered mb-0">
            <tbody>
              <tr>
                <th scope="row">Id</th>
                <td>{{ publisher.id }}</td>
              </tr>
              <tr>
                <th scope="row">Name</th>
                <td>{{ publisher.name }}</td>
              </tr>
              <tr>
                <th scope="row">Books</th>
                <td>
                  {% for book in publisher.books %}
                    {{ book.title }}
                    {% if not loop.last %}, {% endif %}
                  {% endfor %}
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="d-flex justify-content-between">
          <a href="{{ path('app_publisher_index') }}" class="btn btn-secondary mt-3">‚Üê Back to List</a>
          <div class="d-flex">
            <a href="{{ path('app_publisher_edit', {'id': publisher.id}) }}" class="btn btn-warning mt-3 mx-2">Edit</a>
            <a href="{{ path('app_publisher_index') }}" class="btn btn-danger mt-3 p-0">{{ include('publisher/_delete_form.html.twig') }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
