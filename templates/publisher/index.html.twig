{% extends 'base.html.twig' %}

{% block title %}Publisher index{% endblock %}

{% block body %}
    <h1>Publisher index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publisher in publishers %}
            <tr>
                <td>{{ publisher.id }}</td>
                <td>{{ publisher.name }}</td>
                <td>
                    <a href="{{ path('app_publisher_show', {'id': publisher.id}) }}">show</a>
                    <a href="{{ path('app_publisher_edit', {'id': publisher.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_publisher_new') }}">Create new</a>
{% endblock %}
