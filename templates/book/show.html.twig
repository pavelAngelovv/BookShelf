{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}

<section class="intro">
  <div class="gradient-custom-2">
    <div class="mask d-flex align-items-center">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 mb-5 w-75">
            <div class="table-responsive">
              <h1 class="mb-5">Book Details</h1>
              <table class="table table-dark table-bordered mb-0">
                <tbody>
                  <tr>
                    <th scope="row">Id</th>
                    <td>{{ book.id }}</td>
                  </tr>
                  <!-- ... (rest of the table rows) ... -->
                </tbody>
              </table>
            </div>
            <div class="d-flex justify-content-between">
              <a href="{{ path('app_book_index') }}" class="btn btn-secondary mt-3">Back to List</a>
              <div class="d-flex">
                <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn btn-warning mt-3 mx-2">Edit</a>
                <a href="{{ path('app_book_index') }}" class="btn btn-danger mt-3 p-0">{{ include('book/_delete_form.html.twig') }}</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>
{% endblock %}
